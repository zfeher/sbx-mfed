{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:weekends",
    "schedule:automergeWeekends",
    ":dependencyDashboardApproval"
  ],

  "prConcurrentLimit": 1,
  "branchConcurrentLimit": 1,
  "rangeStrategy": "bump",
  "timezone": "Europe/Budapest",
  "labels": ["dependencies"],

  "major": {
    "dependencyDashboardApproval": true,
    "minimumReleaseAge": "30 days",
    "automerge": false
  },

  "minor": {
    "minimumReleaseAge": "14 days"
  },

  "patch": {
    "minimumReleaseAge": "3 days"
  },

  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "enabled": false
    },
    {
      "extends": "local>zfeher/sbx-mfed//.renovate/monorepo-radix-ui",
      "matchUpdateTypes": ["major"],
      "groupName": "radix ui (major)",
      "groupSlug": "radix-ui-major",
      "enabled": true
    },
    {
      "extends": "local>zfeher/sbx-mfed//.renovate/monorepo-radix-ui",
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "groupName": "radix ui (non major)",
      "groupSlug": "radix-ui-non-major",
      "addLabels": ["safe"],
      "automerge": false,
      "enabled": true
    },
    {
      "matchDatasources": ["npm"],
      "matchPackageNames": ["@types/node"],
      "allowedVersions": "18.x",
      "enabled": true
    }
  ]
}
