    "@module-federation/utilities": "^2.0.5",
    "lodash": "~4.13.1",
    "next": "13.4.7"
  },
  "devDependencies": {
    "@module-federation/nextjs-mf": "^7.0.7",
    "autoprefixer": "^10.4.15",
    "postcss": "^8.4.27",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-prefixer": "^3.0.0",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "serve": "^14.2.0",
    "tailwindcss": "^3.3.3"
